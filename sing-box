    <script>
        function copyConfig() {
            // محتوای جدید JSON که فرستادید (تمیز شده و شخصی سازی شده برای AmirVM)
            const config = {
                "log": {"level": "panic", "timestamp": true},
                "dns": {
                    "servers": [
                        {"tag": "dns_proxy", "address": "https://1.1.1.1/dns-query", "detour": "AmirVM_Main_Server"},
                        {"tag": "dns_direct", "address": "local", "detour": "AmirVM_Main_Server"}
                    ],
                    "final": "dns_proxy"
                },
                "inbounds": [
                    {"type": "mixed", "listen": "127.0.0.1", "listen_port": 20122, "sniff": true, "udp_fragment": true},
                    {"type": "tun", "address": ["172.19.0.1/30"], "auto_route": true, "sniff": true}
                ],
                "outbounds": [
                    {"type": "selector", "tag": "AmirVM_Main_Server", "outbounds": ["AmirVM_Cloud_Server", "AmirVM_Direct"]},
                    {"type": "selector", "tag": "AmirVM_Cloud_Server", "outbounds": ["AmirVM_Node_1"]},
                    {
                        "type": "http", 
                        "tag": "AmirVM_Node_1", 
                        "server": "203.23.179.22", 
                        "server_port": 10780, 
                        "headers": {
                            "Host": "stream.meet.google.com", 
                            "Proxy-Authorization": "Basic cHVyZXZwbjBzMTg1MjI5MjA6YUdzZFFGUTAucXZz"
                        }
                    },
                    {"type": "direct", "tag": "AmirVM_Direct"}
                ],
                "route": {"auto_detect_interface": true}
            };

            const jsonStr = JSON.stringify(config, null, 2);
            
            navigator.clipboard.writeText(jsonStr).then(() => {
                alert("کانفیگ جدید AmirVM با موفقیت کپی شد! در برنامه Sing-box گزینه Import from Clipboard را بزنید.");
                // هدایت به لینک درایو برای اطمینان بیشتر
                window.location.href = "sing-box://import-remote-profile?url=https://drive.google.com/uc?id=12hBii4aUOzPGyAQFq1S3Zbrz1jVBmSTy#AmirVM_New";
            });
        }
    </script>
